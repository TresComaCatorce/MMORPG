frm += rate; // increase sprite frame

if( rate &gt; 0 ) // sort animation cycle
{
    if( frm &gt; endFrm )
    {
        frm = startFrm;
        if( self.state = global.playerStateAttacking )
        {
            state = global.playerStateIdle;
        } // at the end of an attack go back to idle
    }
    if( frm &lt; startFrm )
    {
        frm = startFrm;
    }
}


if( state = global.playerStateIdle )
{
    startFrm = 26;
    endFrm = 39;
    rate = 0.25;
}
    
if( state = global.playerStateWalking )
{
    startFrm = 0;
    endFrm = 14;
    rate = 0.5;
}

if( state = global.playerStateRunning )
{
    startFrm = 15;
    endFrm = 25;
    rate = 0.5;
}
    
  
if( state = global.playerStateAttacking )
{
    startFrm = 40; 
    endFrm = 56;
    rate = 0.5;
}

