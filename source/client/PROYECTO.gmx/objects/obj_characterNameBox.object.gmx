    draw_set_alpha(backgroundAlpha);
    draw_rectangle_colour( rectangleX1, rectangleY1, rectangleX2, rectangleY2, backgroundColor, backgroundColor, backgroundColor, backgroundColor, false )
    draw_set_alpha(1);
    depth= -510;
    
    // Draw character name
    draw_text_ext_colour( textX, textY, nombre, 0, 500, textColor, textColor, textColor, textColor, 1 );
    depth= -505;
}
else
{
    show_debug_message("Box draw NO." + string(playerOwner));
}
