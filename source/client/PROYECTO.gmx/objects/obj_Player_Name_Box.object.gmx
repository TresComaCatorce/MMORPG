            <kind>1</kind>
            <string>///Actualizacion del texto y posicion del objeto.

//Obtengo los datos del player.
var nombre = playerOwner.name; //Nombre del personaje.
var pos_x = playerOwner.x; //Posicion X del player.
var pos_y = playerOwner.y; //Posicion Y del player.
var txt_pos_x = ( pos_x - (string_width(nombre)) / 2 ); //Posicion X en la que debe aparecer el nombre.
var txt_pos_y = ( pos_y - 90 ); //Posicion Y en la que debe aparecer el nombre.
var rec_pos_x1 = txt_pos_x - 5;
var rec_pos_y1 = txt_pos_y;
var rec_pos_x2 = txt_pos_x + string_width(nombre) + 5;
var rec_pos_y2 = txt_pos_y + string_height(nombre);


//Se dibuja el TextBox con los datos del usuario.
if( instance_exists(playerOwner) )
{
    //Dibujo el rectangulo de fondo.
    draw_set_colour(nameBackgroundColor); //Color.
    draw_set_alpha(.7); //Opacidad.
    draw_rectangle( rec_pos_x1, rec_pos_y1, rec_pos_x2, rec_pos_y2, false); //Posicion, outline false.
    depth= -510;
    
    //Dibujo el texto.
    draw_set_alpha(1);
    draw_set_colour(c_white); //Color.
    draw_text( txt_pos_x, txt_pos_y, nombre ); //Posicion y texto.
    depth= -505;
}
else
{
    show_debug_message("Box draw NO." + string(playerOwner));
}
</string>
