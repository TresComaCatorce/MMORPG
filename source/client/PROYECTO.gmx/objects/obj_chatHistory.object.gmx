          <argument>
            <kind>1</kind>
            <string>/// Se dibuja el fondo del historial de chat

event_inherited();


if( showBackground )
{
    self.rectangle_y2 = view_hview[view_current] * historyChatHeight;

    draw_set_colour(c_black); //Color.
    draw_set_alpha(.2); //Opacidad.
    draw_rectangle( rectangle_x1, rectangle_y1, rectangle_x2, rectangle_y2, false);
    draw_set_alpha(1);
}
</string>
